---
import { Nav } from "../components/Nav";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <script
      src="https://kit.fontawesome.com/0c1fb969e1.js"
      crossorigin="anonymous"
      is:inline></script>
    <link rel="stylesheet" href="https://use.typekit.net/uqc5wyf.css" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="og:title"
      content={`24th Arctic Orthopedic Summit - ${title}`}
    />
    <meta name="og:image" content="banner.jpg" />
    <meta name="og:description" content={desc} />
    <title>AOS 2025 - {title}</title>
  </head>
  <body class="flex flex-col">
    <Nav client:load />
    <main class="max-w-6xl mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    @apply prose-headings:font-bold font-[joly-display];
  }

  button {
    @apply bg-sky-300 p-4 hover:scale-105 active:scale-100 duration-200 ease-in-out font-medium;
  }
</style>
