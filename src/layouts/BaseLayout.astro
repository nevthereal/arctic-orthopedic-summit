---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <link rel='stylesheet' href='https://use.typekit.net/uqc5wyf.css' />
    <link rel='stylesheet' href='../styles/globals.css' />
    <title>SOY XXVI - {title}</title>
  </head>
  <body>
    <nav
      class='py-8 flex w-[50vw] h-[10dvh] items-center justify-center mx-auto gap-16'
    >
      <a href='/' class='font-black'>Logo</a>
      <div class='flex gap-4 font-bold'>
        <a
          href='/scientific-program'
          class='px-4 hover:text-sky-500 duration-200 ease-in-out'
          >Scientific Program</a
        >
        <a
          href='/registration'
          class='px-4 hover:text-sky-500 duration-200 ease-in-out'
          >Registration</a
        >
        <a
          href='/travel'
          class='px-4 hover:text-sky-500 duration-200 ease-in-out'
          >Venue/Travel</a
        >
      </div>
    </nav>
    <slot />
  </body>
</html>
